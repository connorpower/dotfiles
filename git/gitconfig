[credential]
    helper = osxkeychain
[core]
    editor = /usr/bin/vim
    pager = less -x4
    excludesfile = /Users/connor/.gitignore_global
    whitespace = trailing-space,space-before-tab,blank-at-eol
    precomposeunicode = true
[apply]
    whitespace = warn
[merge]
    tool = opendiff
