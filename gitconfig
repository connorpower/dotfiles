[credential]
    helper = osxkeychain
[core]
    editor = /usr/bin/vim
    pager = less -x4
    excludesfile = /Users/connor/.gitignore_global
    whitespace = trailing-space,space-before-tab,blank-at-eol
    precomposeunicode = true
[apply]
    whitespace = fix
[merge]
    tool = opendiff
[user]
    name = Connor Power
    email = connor@connorpower.com
[color]
    status = auto
    branch = auto
    ui = auto
[push]
    default = upstream
[pull]
    default = current
[alias]
    headless = !sh -c 'git stash -u && git symbolic-ref HEAD refs/heads/$0 && rm .git/index && git clean -fdx && git stash pop'
    hist = log --date-order --pretty=format:'%C(yellow)%h:%Cblue%d%Creset %s %C(white) (%an), %ar%Creset' --graph
    files-in-commit = diff-tree --no-commit-id --name-only -r
    autochanges = !sh -c 'echo "$(git describe --tags --abbrev=0)..HEAD:" && git log $(git describe --tags --abbrev=0)..HEAD --pretty=format:\"%h %s\"'
    changes = !sh -c 'git log $0..$1 --pretty=format:\"%h %s\"'
[url "git@github.com:"]
    insteadOf = https://github.com/
[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
